@model IEnumerable<BookyBook.Entity.Author>
@{
    ViewBag.Title = "Yazarlar";
}
<table class="tableBorder shadowBox">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>@Html.ActionLink("Yeni", "Kaydet", new { Id = 0 })</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var itm in Model)
        {
<tr>
    <td>@itm.Id</td>
    <td>@itm.Firstname</td>
    <td>@itm.Lastname</td>
    <td>@Html.ActionLink("Güncelle", "Kaydet", new { itm.Id })</td>
</tr>
        }
    </tbody>
</table>
