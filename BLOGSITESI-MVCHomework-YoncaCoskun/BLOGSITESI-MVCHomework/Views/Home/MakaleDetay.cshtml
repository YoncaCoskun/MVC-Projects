</head>
<body>
@using (Html.BeginForm("Kaydet", "Home"))
{

    @Html.HiddenFor(x => x.MakaleId)
    <table>
        <tr>
            <td>Makale Başlık</td>
            <td>@Html.TextBoxFor(x => x.Baslik)</td>
        </tr>
