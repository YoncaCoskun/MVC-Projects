@using BLOGSITESI_MVCHomework.Models
@model IEnumerable<BlogModel>

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
    <table>
        <thead>MAKALE LİSTESİ</thead>
    </table>
    <table border="1">
        <tr>
            <th>Makale Id</th>
            <th>Başlık</th>
            <th>Özet</th>
            <th>Içerik</th>
            <th>@Html.ActionLink("Ekle", "Gor", new { Id = 0 })</th>
        </tr>

        @foreach (BlogModel blog in Model)
        {


            <tr>
                <td>@blog.MakaleId</td>
                <td>@blog.Baslik</td>
                <td>@blog.Ozet</td>
                <td>@blog.Icerik</td>
                @using (Html.BeginForm("Guncelle", "Admin", new { Id = blog.MakaleId }))
                {
                    <td><input type="submit" value="Güncelle" /></td>
                }
                @using (Html.BeginForm("Sil", "Home", new { Id = blog.MakaleId }))
                {
                    <td><input type="submit" value="Sil" onclick="return confirm('emin misin?')"></td>
                }
              

            </tr>
        }
    </table>
</body>
</html>